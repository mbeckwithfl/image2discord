//All Chrome extensions start with a JSON file establishing parameters, permissions, etc. Here, you point the extension toward scripts & image files that are needed.
{
    "name": "Image2Discord",
    "description": "Send images to Discord",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker":"background.js",
    "browser_action": {
        "default_title": "Image2Discord", 
        "default_popup": "popup.html"  
        }
   
    }, 
    "options_page": "options.html",
    "permissions": [
        "contextMenus",
        "storage",
    ],
    "action": {
        "default_popup": "popup.html"
      }
}
